<h1>Sign In</h1>

<%= form_with url: sign_in_path, html: { autocomplete: "off" } do |form| %>
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, autocomplete: 'off', class: "form-control", placeholder: "mail@mail.com" %>
    </div>
    <div class="group mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, {class: "form-control", placeholder: "password"} %>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>
<% end %>